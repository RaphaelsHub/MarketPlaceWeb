
@{
    ViewBag.Title = "Buy";
}
<!doctype html>
<html lang="en">

<!--------------------------------------------------------------CONNECT REFERENCES-------------------------------------------------------------------------->
@Html.Partial("~/Views/Partials/References.cshtml")

<body>
    <div class="wrapper">
        <!--------------------------------------------------------------CONNECT HEADER-------------------------------------------------------------------------->
        @Html.Partial("~/Views/Partials/Header.cshtml")

        <!--------------------------------------------------------------MENU-------------------------------------------------------------------------->
        <main class="main">

            <div class="container-fluid">
                <div class="row">
                    <div class="col-12">
                        <nav class="breadcrumbs">
                            <ul>
                                <li><a href="@Url.Action("Index","Home")">Home</a></li>
                                <li><span>Cart</span></li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>

            @model WebProject.Models.Account.UserData

            @if (Model.Cart_User == null || Model.Cart_User.productList == null || Model.Cart_User.productList.Count == 0)
            {
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-lg-12 mb-3">
                            <div class="cart-content p-3 h-100 bg-white">
                                <div class="text-center">
                                    <h3>You haven't made any orders yet</h3>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-lg-8 mb-3">
                            <div class="cart-content p-3 h-100 bg-white">
                                <div class="table-responsive">
                                    <table class="table table-hover">
                                        <thead class="table-dark">
                                            <tr>
                                                <th class="text-center">Photo</th>
                                                <th class="text-center">Product name</th>
                                                <th class="text-center">Price</th>
                                                <th class="text-center">Amount</th>
                                                <th class="text-center"><i class="fa-regular fa-trash-can"></i></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @for (int i = 0; i < Model.Cart_User.productList.Count; i++)
                                            {
                                                var obj = Model.Cart_User.productList[i];
                                                <tr>
                                                    <td class="align-middle text-center"> <img src="@obj.Item1.PhotoUrl[0]" alt=""></td>
                                                    <td class="align-middle text-center">@obj.Item1.Name</td>
                                                    <td class="align-middle text-center">@obj.Item1.Price.ToString("C")</td>
                                                    <td class="align-middle text-center">@obj.Item2</td>
                                                    <td class="align-middle text-center">
                                                        <form method="post" action="@Url.Action("DeleteItem", "Cart")">
                                                            <input type="hidden" name="id" value="@obj.Item1.Id" />
                                                            <button type="submit" class="btn btn-danger">Delete</button>
                                                        </form>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-4 mb-3">
                            <div class="cart-summary p-3 sidebar">
                                <h5 class="section-title"><span>Cart Summary</span></h5>

                                <div class="d-flex justify-content-between my-3">
                                    <h6>Total price:</h6>
                                    <h6>@Model.Cart_User.SumPrice</h6>
                                </div>

                                <div class="d-flex justify-content-between my-3 border-bottom">
                                    <h6>Price shipping:</h6>
                                    <h6>@Model.Cart_User.DeliveryPrice</h6>
                                </div>

                                <div class="d-flex justify-content-between my-3">
                                    <h3>Final cost:</h3>
                                    <h3>@Model.Cart_User.FinalPrice</h3>
                                </div>

                                <div class="d-grid">
                                    <a href="@Url.Action("MakeAnOrder","Cart")" class="btn btn-warning">Checkout</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </main>
        <!--------------------------------------------------------------CONNECT FOOTER-------------------------------------------------------------------------->
        @Html.Partial("~/Views/Partials/Footer.cshtml")
    </div>
</body>
</html>

