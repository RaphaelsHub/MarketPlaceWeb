
@{
    ViewBag.Title = "Buy";
}
<!doctype html>
<html lang="en">

<!--------------------------------------------------------------CONNECT REFERENCES-------------------------------------------------------------------------->
@Html.Partial("~/Views/Partials/Ref.cshtml")

<body>
    <div class="wrapper">
        <!--------------------------------------------------------------CONNECT HEADER-------------------------------------------------------------------------->
        @Html.Partial("~/Views/Partials/Header.cshtml")

        <!--------------------------------------------------------------MENU-------------------------------------------------------------------------->
        <main class="main">

            <div class="container-fluid">
                <div class="row">
                    <div class="col-12">
                        <nav class="breadcrumbs">
                            <ul>
                                <li><a href="@Url.Action("Index","Home")">Home</a></li>
                                <li><span>Cart</span></li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>

            <div class="container-fluid">
                <div class="row">

                    <div class="col-lg-8 mb-3">
                        <div class="cart-content p-3 h-100 bg-white">
                            <div class="table-responsive">
                                <table class="table align-middle table-hover">
                                    <thead class="table-dark">
                                        <tr>
                                            <th>Photo</th>
                                            <th>Product name</th>
                                            <th>Price</th>
                                            <th>Amount</th>
                                            <th><i class="fa-regular fa-trash-can"></i></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @Html.Partial("~/Views/Partials/ProductCart.cshtml")
                                        @Html.Partial("~/Views/Partials/ProductCart.cshtml")
                                        @Html.Partial("~/Views/Partials/ProductCart.cshtml")
                                        @Html.Partial("~/Views/Partials/ProductCart.cshtml")
                                        @Html.Partial("~/Views/Partials/ProductCart.cshtml")
                                        @Html.Partial("~/Views/Partials/ProductCart.cshtml")
                                        @Html.Partial("~/Views/Partials/ProductCart.cshtml")
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-4 mb-3">
                        <div class="cart-summary p-3 sidebar">
                            <h5 class="section-title"><span>Cart Summary</span></h5>

                            <div class="d-flex justify-content-between my-3">
                                <h6>Total price:</h6>
                                <h6>@ViewBag.TotalPriceOrder</h6>
                            </div>


                            <div class="d-flex justify-content-between my-3 border-bottom">
                                <h6>Price shipping:</h6>
                                <h6>@ViewBag.TotalPriceShipping</h6>
                            </div>


                            <div class="d-flex justify-content-between my-3">
                                <h3>Final cost:</h3>
                                <h3>@ViewBag.FinalCost</h3>
                            </div>

                            <div class="d-grid">
                                <a href="@Url.Action("MakeAnOrder","Order")" class="btn btn-warning">Checkout</a>
                            </div>

                        </div>

                    </div>

                </div>
            </div>

        </main>

        <!--------------------------------------------------------------CONNECT FOOTER-------------------------------------------------------------------------->
        @Html.Partial("~/Views/Partials/Footer.cshtml")
    </div>

    <!--------------------------------------------------------------CONNECT SCROLL STUFF-------------------------------------------------------------------------->
    @Html.Partial("~/Views/Partials/Scroll.cshtml")
</body>

</html>

