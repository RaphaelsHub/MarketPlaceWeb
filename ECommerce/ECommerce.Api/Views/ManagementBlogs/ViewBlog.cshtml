@{
    ViewBag.Title = "Manage Blog";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Manage Blog</h2>
        <div>
            <button class="btn btn-success">Save</button>
            <button class="btn btn-danger">Delete</button>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-header">Blog Information</div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label for="title" class="form-label">Title</label>
                        <input type="text" class="form-control" id="title" placeholder="Enter blog title">
                    </div>
                    <div class="mb-3">
                        <label for="content" class="form-label">Content</label>
                        <textarea class="form-control" id="content" rows="5" placeholder="Enter blog content"></textarea>
                    </div>
                    <div class="mb-3">
                        <label for="datePublished" class="form-label">Date Published</label>
                        <input type="datetime-local" class="form-control" id="datePublished" value="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label for="userPublished" class="form-label">Published By</label>
                        <select class="form-select" id="userPublished">
                            <option>Admin</option>
                            <option>User</option>
                            <option>Editor</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="entityStatus" class="form-label">Status</label>
                        <select class="form-select" id="entityStatus">
                            <option>Active</option>
                            <option selected>Inactive</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="imageUpload" class="form-label">Upload Image</label>
                        <input type="file" class="form-control" id="imageUpload" accept="image/*" onchange="previewImage(event)">
                        <div class="mt-3">
                            <img id="imagePreview" src="#" alt="Preview" style="display: none; width: 100px; height: 100px; object-fit: cover; border: 1px solid #ccc;">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function previewImage(event) {
        const input = event.target;
        const reader = new FileReader();
        reader.onload = function () {
            const img = document.getElementById('imagePreview');
            img.src = reader.result;
            img.style.display = 'block';
        };
        if (input.files && input.files[0]) {
            reader.readAsDataURL(input.files[0]);
        }
    }
</script>
