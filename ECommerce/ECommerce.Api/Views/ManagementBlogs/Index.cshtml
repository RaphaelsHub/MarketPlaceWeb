@{
    ViewBag.Title = "BLogs Management";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <div class="row mb-3">
        <div class="col-md-4 mb-3">
            <input type="text" id="searchInputByEmailAndName" class="form-control" placeholder="Search by Title">
        </div>
        <div class="col-md-2 mb-3">
            <select id="sortByOrderStatus" class="form-control">
                <option value="">Select status</option>
                <option value="admin">Pending</option>
            </select>
        </div>
        <div class="col-md-2 mb-3">
            <input type="date" class="form-control" id="dateRegistered" value="2025-02-10">
        </div>
        <div class="col-md-2 mb-3">
            <button class="btn btn-primary w-100" id="searchButton">Search</button>
        </div>
        <div class="col-md-2 mb-3">
            <button class="btn btn-primary w-100" id="createButton">Create new Blog</button>
        </div>
    </div>

    <table class="table table-bordered table-hover text-center">
        <thead class="table-primary">
        <tr>
            <th>Title</th>
            <th>Date</th>
            <th>Author</th>
            <th style="width: 200px;">Actions</th>
        </tr>
        </thead>
        <tbody>
        <tr>
            <td>How to Start Programming</td>
            <td>2024-02-15</td>
            <td>Ivan Ivanov</td>
            <td>
                <a href="@Url.Action("ViewBlog", "ManagementBlogs", new { id=1 })">
                    <button class="btn btn-info btn-sm">View Blog</button>
                </a>
            </td>
        </tr>
        </tbody>
    </table>
    
    <nav>
        <ul class="pagination justify-content-center">
            <li class="page-item disabled"><a class="page-link" href="#">Previous</a></li>
            <li class="page-item active"><a class="page-link" href="#">1</a></li>
            <li class="page-item"><a class="page-link" href="#">2</a></li>
            <li class="page-item"><a class="page-link" href="#">3</a></li>
            <li class="page-item"><a class="page-link" href="#">Next</a></li>
        </ul>
    </nav>
</div>