@{
    ViewBag.Title = "Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="breadcrumbs" style="background-color: #ffffff;">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="bread-inner">
                    <ul class="bread-list">
                        <li><a href="@Url.Action("Index", "Home")">Home<i class="ti-arrow-right"></i></a></li>
                        <li class="active"><a href="@Url.Action("Cart", "Shopping")">Cart</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container mt-4">
    <h2 class="mb-3">Shopping Cart</h2>

    <div class="row">
        <!-- Колонка с таблицей товаров -->
        <div class="col-md-8">
            <div class="table-responsive">
                <table class="table table-bordered table-striped text-center">
                    <thead class="table-dark">
                    <tr>
                        <th style="width: 70px;">PHOTO</th>
                        <th style="width: 300px;">NAME</th>
                        <th style="width: 120px;">UNIT PRICE</th>
                        <th style="width: 100px;">QUANTITY</th>
                        <th style="width: 140px;">TOTAL</th>
                        <th style="width: 100px;"><i class="ti-trash remove-icon"></i></th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        <td><img src="https://via.placeholder.com/50" alt="Product" class="img-fluid"></td>
                        <td>Sample Product 1</td>
                        <td>500.00 ₽</td>
                        <td>
                            <input type="number" class="form-control text-center" value="1" min="1">
                        </td>
                        <td>500.00 ₽</td>
                        <td><button class="btn btn-danger btn-sm"><i class="ti-trash"></i></button></td>
                    </tr>
                    <tr>
                        <td><img src="https://via.placeholder.com/50" alt="Product" class="img-fluid"></td>
                        <td>Sample Product 2</td>
                        <td>300.00 ₽</td>
                        <td>
                            <input type="number" class="form-control text-center" value="2" min="1">
                        </td>
                        <td>600.00 ₽</td>
                        <td><button class="btn btn-danger btn-sm"><i class="ti-trash"></i></button></td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Колонка с Order Summary -->
        <div class="col-md-4 order-md-last">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h5 class="card-title text-center mb-3">Order Summary</h5>
                    <table class="table table-borderless">
                        <tr>
                            <th>Cart Subtotal:</th>
                            <td class="text-end">1,100.00 ₽</td>
                        </tr>
                        <tr>
                            <th>You Save:</th>
                            <td class="text-end text-success">-100.00 ₽</td>
                        </tr>
                        <tr class="border-top">
                            <th class="pt-2">You Pay:</th>
                            <td class="text-end fw-bold pt-2">1,000.00 ₽</td>
                        </tr>
                    </table>
                    <button class="btn btn-primary w-100 mt-2">Proceed to Checkout</button>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="mt-5"></div> 

@Html.Partial("~/Views/Shared/Partials/StoreAdvantages.cshtml")

